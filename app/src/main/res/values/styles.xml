<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_theme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:editTextColor">@color/colorSecondaryText</item>
    <item name="android:textColorHint">@color/colorSecondaryText</item>
    <item name="android:textColor">@color/colorSecondaryText</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="TextSecondaryText12" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TextBoldWhite14" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBoldPrimaryText14" parent="TextAppearance.AppCompat.Title">
