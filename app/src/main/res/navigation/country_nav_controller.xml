<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/country_nav_controller"
    app:startDestination="@id/countryListFragment">

    <fragment
        android:id="@+id/countryListFragment"
        android:name="com.example.countries.landingscreen.fragments.CountryListFragment"
        android:label="fragment_country_list"
        tools:layout="@layout/fragment_country_list" >
        <action
            android:id="@+id/action_goto_countryDetailFragment"
            app:destination="@id/countryDetailFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/countryDetailFragment"
        android:name="com.example.countries.landingscreen.fragments.CountryDetailFragment"
        android:label="fragment_country_detail"
        tools:layout="@layout/fragment_country_detail" >
        <argument
            android:name="countryName"
            app:argType="com.example.countries.landingscreen.model.country.CountryDetailsResp"
            app:nullable="false" />
    </fragment>
</navigation>